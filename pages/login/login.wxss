/* login.wxss */
@import 'iconfont.wxss';

@font-face {
  font-family: 'Shrimp';
  src: url('/fonts/Shrimp.eot');
  src: local('☺'),
         url('/fonts/Shrimp.woff') format('woff'),
         url('/fonts/Shrimp.ttf') format('truetype'),
         url('/fonts/Shrimp.svg') format('svg');
  font-weight: normal;
  font-style: normal;
}

.cover {
  position: absolute;
  font-family: YouYuan, Serif;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(226, 226, 226, 0.7);
}

.loginBox {
  text-align: center;
  width: 300px;
  height: 360px;
  margin: 50px auto 0;
  background-color: rgba(255, 255, 255, 1);
  overflow: hidden;
  border-radius: 7px;
  box-shadow: 0px 0px 15px 1px #696969;
}
