<!--login.wxml-->
<view class='cover'>
  <view class='loginBox'>

    <view class='containLogo'>
      <image class='logoImg' src='../../images/logo.jpg'></image>
    </view>
    <text class='logoName'>wonder</text>
    <text class="logoChName">の解忧杂货铺</text>
    <!--输入表单  -->
    <form bindsubmit="login" class='form'>
      <!--用户名输入  -->
      <view class="inputView usernameInput">
        <icon class='iconfont icon-dengluicon'></icon>
        <icon class='warnicon {{className.warnNickName}}' type='{{rightIcon.usricon}}' color='{{rightIcon.usriconcol}}' size='16'></icon>
        <input name='usr' class="usrinfo nickname {{className.usrfocus}} {{usrok ? '':className.inputWarnU}}" data-symbol="usrfocus" maxlength='16' bindfocus='inputfocus' bindblur='inputblur' focus='{{autofocus}}' placeholder-class='placeholder' placeholder="昵称"  type="text" cursor-spacing="100px" />
        <text class='warnText'>{{usrWarnText}}</text>
      </view>
      <!--密码输入  -->
      <view class="inputView pwdInput">
        <icon class='iconfont icon-denglumima'></icon>
        <icon class='warnicon {{className.warnPwd}}' type='{{rightIcon.pwdicon}}' color='{{rightIcon.pwdiconcol}}' size='16'></icon>
        <input name='pwd' class="usrinfo passwd {{className.pwdfocus}} {{pwdok?'':className.inputWarnP}}" data-symbol='pwdfocus' bindfocus='inputfocus' maxlength='16' bindblur='inputblur' placeholder-class='placeholder' placeholder="密码"  password='true' cursor-spacing="100px" />
        <text class='warnText'>{{pwdWarnText}}</text>
      </view>
      <!--密码再次确认  -->
      <view class="inputView {{className.pwdConfirm}}">
        <icon class='iconfont icon-denglumima'></icon>
        <icon class='warnicon {{className.warnPwdCon}}' type='{{rightIcon.pwdconicon}}' color='{{rightIcon.pwdconiconcol}}' size='16'></icon>
        <input name='pwdcon' class="usrinfo passwd {{className.pwdconfocus}} {{pwdconok?'':className.inputWarnPC}}" data-symbol="pwdconfocus" bindfocus='inputfocus' maxlength='16' bindblur='inputblur' placeholder-class='placeholder' placeholder="请再次输入密码"  password='true' cursor-spacing="100px" />
        <text class='warnText'>{{pwdConWarnText}}</text>
      </view>
      <button form-type="submit" class='submitBtn {{className.loginBtn}}'>登录</button>
      <button form-type='submit' bindtap='chooseSignup' class='submitBtn'>注册</button>
    </form>
  </view>
  <view class='webInfo' bindtap='{{bottomBind}}'>{{bottomText}}</view>
</view>